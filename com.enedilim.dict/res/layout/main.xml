<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="5dp"
	android:paddingBottom="10dp" >

	<ImageView android:id="@+id/logo" 
	     android:src="@drawable/logoenedilim"
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:paddingTop="5dp" 
		android:paddingBottom="10dp"
		android:layout_alignParentTop="true" />
		    
	<AutoCompleteTextView android:id="@+id/autoCompleteWord"
		android:text="" 
		android:textSize="20sp"
		android:textColor="#000000"
		android:inputType="text"
		android:singleLine="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/logo" />
				
    <ListView 
        android:id="@+id/listViewResult"
		android:clickable="false"
		android:focusable="false"
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/autoCompleteWord" />

	<TextView android:id="@+id/copyright" 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:visibility="gone"
		android:gravity="center"
		android:paddingTop="30dp"
		android:layout_below="@id/listViewResult" />

</RelativeLayout>
