<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"
                android:paddingTop="15dp">
    
    <TextView android:id="@+id/textViewPhraseDiamond" 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" 
              android:layout_alignParentLeft="true"
              android:text="@string/diamond"
              android:paddingRight="2dp"
              android:textColor="@color/grey" />

    <TextView android:id="@+id/textViewPhrase" 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" 
              android:textStyle="bold"
              android:layout_toRightOf="@+id/textViewPhraseDiamond"
        android:textIsSelectable="true"/>
		
    <LinearLayout android:id="@+id/layoutPhraseDefinitions"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_below="@id/textViewPhrase"
                  android:paddingLeft="5dp"/>
</RelativeLayout>